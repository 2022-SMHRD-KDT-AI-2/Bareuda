            <div id="container"> <!--header,footer 제외 전체-->
                <div id="content1"> <!--상세페이지1-->
                    <div class="prd">
                        <div class="prd_img"><img src="/img/{{product.p_img}}"></div>
                        <div class="prd_detail">
                            <div class="p_brand">{{product.p_brand}}</div>
                            <div class="p_name">{{product.p_name}}</div>
                            <div class="p_price"><strong>{{product.p_price}}원</strong></div>
                            <div class="c_type"><p><span class="type_result">{{product.p_result}}</span></p></div>
                            <div class="heart-container">

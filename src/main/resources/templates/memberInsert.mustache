<!-- 회원 가입 form 작성시 주의사항
action="/member/create"
name="mem_id"
name="mem_pw"
name="mem_name"
name="mem_email"
-->
<!doctype html>
<html lang="en">
<head>
    <!-- Required meta tags -->
    <meta charset="utf-8">
    <meta name="viewport" content="width=device-width, initial-scale=1">
    <!-- CSS -->
    <link rel="stylesheet" href="/CSS/signUp.css">
</head>
    {{>layouts/header}}
    <!-- content -->
    <div id="body_wrapper">
        <div id="body_content">
            <form action="/member/create" method="post">
                <div id="wrapper_signUp">
                    <div id="content">
                        <!-- ID -->
                        <div>
                            <h3 class="join_title">
                                <label for="id"></label>
                            </h3>
                            <span class="box int_id">
                                <input type="text" id="memId" name="mem_id" class="int" maxlength="20" placeholder="아이디">
                            </span>

                              <!-- PW -->
                            <div>
                                <h3 class="join_title"><label for="pswd1"></label></h3>
                                <span class="box int_pass">
                                <input type="password" id="memPwd" name="mem_pw" class="int" maxlength="20" placeholder="비밀번호">
                            </span>
                            </div>

                            <!-- 이름 -->
                            <div>
                                <h3 class="join_title"><label for="pswd1"></label></h3>
                                <span class="box int_pass">
                                <input type="text" id="memPwd" name="mem_name" class="int" maxlength="20" placeholder="이름">
                            </span>
                            </div>

                            <!-- 이메일 -->
                            <div>
                                <h3 class="join_title"><label for="pswd1"></label></h3>
                                <span class="box int_pass">
                                <input type="text" id="memPwd" name="mem_email" class="int" maxlength="20" placeholder="이메일">
                            </span>
                            </div>

                            <!-- 회원가입 BTN-->
                            <div class="btn_area1">
                                <button type="submit" id="btnJoin">
                                    <div id="btn_content"><a>회원가입</a></div>
                                </button>
                            </div>
                        </div>
                    </div>
                </div>
            </form>
        </div>
    </div>
    <!-- /content -->
    {{>layouts/footer}}
</body>
</html>
        <script type="text/javascript">
    var context = document
      .getElementById('myChart')
      .getContext('2d');
    var myChart = new Chart(context, {
      type: 'radar', // 차트의 형태
      data: { // 차트에 들어갈 데이터
        labels: [
          //x 축
          '지성', '건성', '중성', '민감성', '복합성'
        ],
        datasets: [
          { //데이터
            label: '나의 피부타입', //차트 제목
            fill: true, // line 형태일 때, 선 안쪽을 채우는지 안채우는지
            data: [
              21, 19, 25, 20, 23//x축 label에 대응되는 데이터 값
            ],
            backgroundColor: [
              //색상
              'rgba(255, 99, 132, 0.2)',
              'rgba(54, 162, 235, 0.2)',

            ],
            borderColor: [
              //경계선 색상
              'rgba(255, 99, 132, 1)',
              'rgba(54, 162, 235, 1)',
            ],
            borderWidth: 1 //경계선 굵기
          },
          {
            label: '제품 리뷰 타입',
            fill: true,
            data: [
              14, 24, 12, 24, 20
            ],
            backgroundColor: 'rgb(157, 109, 12)',
            borderColor: 'rgb(157, 109, 12)'
          }
        ]
      },
      options: {
        scales: {
          yAxes: [
            {
              ticks: {
                display: false,
                min: 0,
                max: 0,
                stepSize: 10,
                beginAtZero: true
              }
            }
          ]
        }
      }
    });
  </script>
